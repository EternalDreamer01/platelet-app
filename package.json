    "@tauri-apps/cli": "^1.5.14",
    "nuxt": "^3.11.2",
    "pinia": "^2.2.1",
    "vite": "^5.2.12",
    "vue": "^3.4.27",
    "vue-router": "^4.3.2"
  },
